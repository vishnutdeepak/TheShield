<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="ONE TAP LIST"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/alert"
        android:layout_width="75dp"
        android:layout_height="75dp"


        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:background="@drawable/alarm"
        android:onClick="callalert" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alert"

        android:layout_below="@+id/alert"
        android:text="   Raise Alarm"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/call"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="26dp"
        android:background="@drawable/call"
        android:onClick="callEmergency" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/alert"
        android:layout_marginEnd="13dp"
        android:text="Emergency Contact"
        android:textSize="12sp" />


        <ImageButton
            android:id="@+id/location"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="95dp"
            android:background="@drawable/loc"

            android:onClick="sendLocationViaWhatsapp"
            android:text="send location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="12sp"
        android:text="Send Location" />



</RelativeLayout>